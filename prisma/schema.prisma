generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Generation {
  id         String   @id @default(uuid())
  subject    String
  difficulty String
  content    Json
  createdAt  DateTime @default(now())

  @@index([subject, difficulty])
}


